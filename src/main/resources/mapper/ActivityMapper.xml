<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ActivityMapper">

  <resultMap id="ActivityResultMap" type="com.example.demo.model.Activity">
    <id property="id" column="id" />
    <result property="title" column="title" />
    <result property="description" column="description" />
    <result property="location" column="location" />
    <result property="startTime" column="start_time" />
    <result property="endTime" column="end_time" />
    <result property="publisherId" column="publisher_id" />
    <result property="createTime" column="create_time" />
  </resultMap>

  <insert id="insertActivity" parameterType="com.example.demo.model.Activity" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO activity (title, description, location, start_time, end_time, publisher_id, create_time)
    VALUES (#{title}, #{description}, #{location}, #{startTime}, #{endTime}, #{publisherId}, #{createTime})
  </insert>

  <select id="findById" parameterType="long" resultMap="ActivityResultMap">
    SELECT * FROM activity WHERE id = #{id}
  </select>

  <select id="findAll" resultMap="ActivityResultMap">
    SELECT * FROM activity ORDER BY create_time DESC
  </select>

  <select id="findByPublisherId" parameterType="long" resultMap="ActivityResultMap">
    SELECT * FROM activity WHERE publisher_id = #{publisherId} ORDER BY create_time DESC
  </select>

  <update id="updateActivity" parameterType="com.example.demo.model.Activity">
    UPDATE activity
    <set>
      <if test="title != null">title = #{title},</if>
      <if test="description != null">description = #{description},</if>
      <if test="location != null">location = #{location},</if>
      <if test="startTime != null">start_time = #{startTime},</if>
      <if test="endTime != null">end_time = #{endTime},</if>
      <if test="publisherId != null">publisher_id = #{publisherId},</if>
    </set>
    WHERE id = #{id}
  </update>

  <delete id="deleteById">
    DELETE FROM activity WHERE id = #{id}
  </delete>

  <select id="searchByTitle" parameterType="string" resultMap="ActivityResultMap">
    SELECT * FROM activity
    WHERE title LIKE CONCAT('%', #{title}, '%')
    ORDER BY create_time DESC
  </select>
</mapper>