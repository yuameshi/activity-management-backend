<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.OperationLogMapper">

	<resultMap id="OperationLogResultMap" type="com.example.demo.model.OperationLog">
		<id property="id" column="id"/>
		<result property="userId" column="user_id"/>
		<result property="operation" column="operation"/>
		<result property="targetId" column="target_id"/>
		<result property="targetType" column="target_type"/>
		<result property="ipAddress" column="ip_address"/>
		<result property="createTime" column="create_time"/>
	</resultMap>

	<insert id="insert" parameterType="com.example.demo.model.OperationLog">
		INSERT INTO operation_log
		(user_id, operation, target_id, target_type, ip_address, create_time)
		VALUES
		(#{userId}, #{operation}, #{targetId}, #{targetType}, #{ipAddress}, NOW())
	</insert>

	<select id="selectAll" resultMap="OperationLogResultMap">
		SELECT * FROM operation_log ORDER BY create_time DESC
	</select>

	<select id="selectByPage" resultMap="OperationLogResultMap">
		SELECT * FROM operation_log
		ORDER BY create_time DESC
		LIMIT #{limit} OFFSET #{offset}
	</select>

	<select id="count" resultType="int">
		SELECT COUNT(*) FROM operation_log
	</select>

</mapper>